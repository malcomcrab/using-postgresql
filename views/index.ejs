<!-- views/index.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
</head>
<body>
  <h1><%= title %></h1>
  <p>User list will go here</p>
  <% if (locals.usernames) {%>
    <% usernames.forEach(user => { %>
      <li>
       Username: <%= user.username %> 
      </li>
    <% }); %>
  <% } %>

  <div>
    <form action="/search" method="get" >

        <label for="searchTerm">Username Search: </label>
        <input type="text" name="searchTerm" id="searchTerm">
        <button type="submit">Submit</button>
    </form>
    
  </div>
  <form action="/delete" method="POST" style="display:inline;">
    <button type="submit" onclick="return confirm('Are you sure you want to delete everyone?');">Delete</button>
  </form>
  <a href="/new">Create a user</a>
  <a href="/">home</a>
</body>
</html>
